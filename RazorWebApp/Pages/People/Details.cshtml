@page
@model RazorWebApp.Pages.People.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Age)
        </dd>
    </dl>
    <!-- grid table displaying all of this person's tasks -->
    <h4>Tasks</h4>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Person.Tasks)
            {
                <tr>
                    <td>@Html.DisplayFor(model => task.Title)</td>
                    <td>@Html.DisplayFor(model => task.Description)</td>
                    <td>@Html.DisplayFor(model => task.Priority)</td>
                    <td>@Html.DisplayFor(model => task.StartDate)</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Person.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
